/* Login.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.background-image {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
  /* filter: blur(10px); */
}

.login-form {
  width: 70%;
  padding: 30rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.welcome-text {
  font-size: 36rpx;
  color: #333;
  text-align: center;
}

.login-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #4CD964;
  border-radius: 50rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
}

.info-text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}