/**index.wxss**/
.weui-tab__panel {
  padding: 20rpx;
}

.placeholder {
  background-color: var(--weui-BG-1);
  margin: 20rpx 10rpx;
  padding: 20rpx;
  text-align: center;
  color: var(--weui-FG-1);
  font-size: 32rpx;
}

.weui-grid__icon image {
  width: 100%;
  height: 100%;
}
/* 在pages/index/index.wxss中 */
.custom-tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  height: 50px;
  background-color: #ffffff;
}

.tab-item {
  flex: 1;
  text-align: center;
  line-height: 50px;
}

