
.header {
  padding: 20rpx;
  text-align: center;
  background-color: #333;
  color: white;
}

.section-title {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.video-list-container {
  padding: 20rpx;
}

.divider {
  height: 1rpx;
  background-color: #ccc; /* 分割线颜色 */
  margin: 20rpx 0;
}

.video-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #a7d3e8;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.video-element {
  width: 100%;
  height: 400rpx; /* 固定视频高度，可根据需求调整 */
  margin-bottom: 10rpx;
}

.video-title {
  font-size: 28rpx;
  color: #666;
}
.listcontainer {
  background-color: #f8f8f8; /* 整体背景色 */
}